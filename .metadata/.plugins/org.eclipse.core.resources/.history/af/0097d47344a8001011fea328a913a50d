package String;

import java.util.*;

public class tryString {
	public static void main(String[] args) {

		/*
		 * String a = "Try programiz pro"; String s[] = a.split(" ");
		 * 
		 * for(int i= s.length-1; i>=0; i--) { System.out.print(s[i]+ " "); }
		 * System.out.println("");
		 */

		
		
		String str = "abbccdd";
		int n = str.length();
		int c = 1;
		
		String res = "";
		
		for(int i = 0; i< n-1; i++) {
			if(str.charAt(i) == str.charAt(i+1) {
				c = c+1;
				
			}else {
				res = str.charAt(i)+"" +c;
				c = 1;	
			}
		}
		
		System.out.println(res);
		
		
	}
}
